{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true
  },
  "include" : [
    "src/**/*"
  ]
}